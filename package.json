{
  "name": "Base_Template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "scss": "sass --no-source-map src/scss/:dist/css/ --style=compressed",
    "autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers '> 5%, ie 9' -r dist/css/*",
    "babel": "babel src -d lib",
    "uglify": "mkdir -p dist/js && uglifyjs src/js/*.js -m -o dist/js/script.js && uglifyjs src/js/*.js -m -c -o dist/js/script.min.js",
    "lint": "eslint src/js",
    "imagemin": "imagemin src/images/* --out-dir=dist/images -p",
    "icons": "svgo -f src/images/icons && mkdir -p dist/images && svg-sprite-generate -d src/images/icons -o dist/images/icons.svg",
    "tailwind": "tailwindcss -i ./src/css/tailwind_input.css -o ./dist/css/tailwind_output.css --watch",
    "serve": "browser-sync start --browser 'google chrome' --server --files 'dist/css/*.css', 'dist/js/*.js', 'dist/*.html', '**/*.html', '!node_modules/**/*.html'",
    "watch:css": "onchange 'src/scss/**/*.scss' -- npm run build:css",
    "watch:tailwind": "onchange 'src/css/*.css' -- npm run tailwind",
    "watch:js": "onchange 'src/js/*.js' -- npm run build:js",
    "watch:img": "onchange 'src/images/**' -- npm run build:images",
    "watch": "npm-run-all --parallel serve watch:*",
    "build:css": "npm run scss && npm run autoprefixer",
    "build:js": "npm run uglify && npm run babel",
    "build:images": "npm run imagemin && npm run icons",
    "build": "npm-run-all build:*"
  },
  "author": "Charlie Mac",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.4",
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "browser-sync": "^2.27.9",
    "debug": "^4.3.4",
    "eslint": "^8.11.0",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0",
    "svg-sprite-generator": "^0.0.7",
    "svgo": "^2.8.0",
    "tailwindcss": "^3.0.23",
    "trim-newlines": "^4.0.2",
    "uglify-js": "^3.15.3"
  },
  "dependencies": {
    "css-select": "^4.2.1",
    "lodash": "^4.17.21",
    "sass": "^1.49.9",
    "uuid": "^8.3.2"
  }
}
